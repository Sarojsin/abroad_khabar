# Project
DEBUG=True
PROJECT_NAME="Educational Consultancy Platform"
VERSION=1.0.0
API_V1_STR=/api/v1

# Security 
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080  # 7 days
REFRESH_TOKEN_EXPIRE_DAYS=30

# Database
POSTGRES_SERVER=localhost
POSTGRES_USER=postgres
POSTGRES_PASSWORD=00000
POSTGRES_DB=education_platform
DATABASE_URL=postgresql://postgres:00000@localhost:5432/education_platform


# CORS a web security mechanism that allows web pages from one domain to access resources (like data, fonts, APIs) from a different domain, bypassing the browser's strict Same-Origin Policy
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# File upload
MAX_UPLOAD_SIZE=104857600  # 100MB
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif,webp
ALLOWED_VIDEO_TYPES=mp4,avi,mov,wmv,webm

# Redis
REDIS_URL=redis://localhost:6379

# Email (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=educonsultancy@gmail.com
SMTP_PASSWORD=abcdefg
EMAILS_FROM_EMAIL=noreply@educonsultancy.com


# Frontend
FRONTEND_URL=http://localhost:3000
# FRONTEND_URL=https://mydomain.com
# Rate limiting
RATE_LIMIT_ENABLED=False
